main
	.cards
		- var cards = 36;
		- while (cards--) {
			//- choose card contents
			- var c = cards % cardText.length;

			a(href="#").stack
				.card.top
					+cardText(cardText[c].name,cardText[c].position,cardText[c].email,cardText[c].phone,cardText[c].address,cardText[c].city)
				.card.mid-top
					+cityOnly(cardText[c].city)
				.card.mid-bottom
					+cityOnly(cardText[c].city)
				.card.bottom
					+cityOnly(cardText[c].city)
